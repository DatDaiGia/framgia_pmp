<div class="container">
  <div class="product_backlog">
    <h1><%= t "product_backlog.index.productbacklog" %></h1>
    <table class="table table-hover table-striped table-bordered">
        <thead class="thead_table">
          <tr>
            <th><%= t ".product_backlog.index.category" %></th>
            <th><%= t ".product_backlog.index.story" %></th>
            <th><%= t ".product_backlog.index.priority" %></th>
            <th><%= t ".product_backlog.index.estimate" %></th>
            <th><%= t ".product_backlog.index.actual" %></th>
            <th><%= t ".product_backlog.index.remaining" %></th>
            <th><%= t ".product_backlog.index.project" %></th>
            <th><%= t ".product_backlog.index.action" %></th>
          </tr>
        </thead>
        <tbody>
          <%= render @product_backlogs %>
        </tbody>
    </table>
    <div class="col-md-12" id="has_product_backlog_api">
    </div>
      <br>
      <div class="col-md-4" id="product_backlog">
        <button class="btn btn-xs btn-info" id="add_more_pb">
          <span class="glyphicon glyphicon-plus"></span></button>
      </div>
  </div>
  <div class="clearfix"></div>
  <div class="row">
    <%= render "shared/category_tab", project: @project,
    active_tab: Settings.tabs.project_backlog, f: nil %>
  </div>
</div>
