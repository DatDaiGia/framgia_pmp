<h2 class=text-center><%= t "layouts.invite" %></h2>
<%= form_for(:invite_user, url: invite_users_path,
  html: {method: :post}) do |f| %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= f.label :email %><br/>
      <%= f.email_field :email, class: "form-control", autofocus: true,
        required: true %><br/>

      <%= f.submit t("buttons.send"),
        class: "btn btn-lg btn-primary center-block" %>
    </div>
  </div>
<% end %>
