<%= form_for [@project, @sprint], html: {id: "lost_hour_form"} do |f| %>
  <%= render "shared/category_tab", project: @project, active_tab: @sprint.id, f: f %>
  <div id="sprints">
    <div class="row" id="chart">
      <div id="burndown_chart"></div>
      <%= render "shared/lost_hour", sprint: @sprint, project: @project,
        assignees: @sprint.assignees, f: f %>
    </div>
    <%= render "shared/activities", f: f %>
  </div>
<% end %>
